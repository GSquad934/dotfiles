#!/bin/bash
while true; do
	dwmupdates > /tmp/dwmupdates.txt
	dwmdisk > /tmp/dwmdisk.txt
	sleep 3600s
done &

while true; do
	VOL="$(dwmvol)"
	CPU="$(dwmcpu)"
	RAM="$(dwmmemory)"
	NET="$(dwmnet)"
	TEMP="$(dwmtemp)"
	CLOCK="$(dwmclock)"
	UPDATES="$(< /tmp/dwmupdates.txt)"
	DISK="$(< /tmp/dwmdisk.txt)"
	xsetroot -name " $UPDATES| $CPU| $RAM| $NET| $TEMP| $DISK| $VOL| $CLOCK"
	sleep 1s
done &